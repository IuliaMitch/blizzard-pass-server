generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gender {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Games {
  id                 String   @id @default(uuid())
  title              String   @unique
  description        String
  year               Int
  imdbScore          Int
  trailerYoutubeUrl  String
  gameplayYoutubeUrl String
  coverImageUrl      String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
